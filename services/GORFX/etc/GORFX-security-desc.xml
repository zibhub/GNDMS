<?xml version="1.0" encoding="UTF-8"?>
<securityConfig xmlns="http://www.globus.org">
  <method name="queryResourceProperties">
    <auth-method>
      <none />
    </auth-method>
  </method>
  <method name="getMultipleResourceProperties">
    <auth-method>
      <none />
    </auth-method>
  </method>
  <method name="getResourceProperty">
    <auth-method>
      <none />
    </auth-method>
  </method>
  <method name="getServiceSecurityMetadata">
    <auth-method>
      <none />
    </auth-method>
  </method>
  <authz value="gridmap" />
  <gridmap value="/etc/grid-security/grid-mapfile" />
  <auth-method>
    <GSISecureConversation>
      <protection-level>
        <privacy />
      </protection-level>
    </GSISecureConversation>
  </auth-method>
  <run-as>
    <system-identity />
  </run-as>
</securityConfig>


